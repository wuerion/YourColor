<script>

    let button = document.getElementById("buttonOjos");
    let container = document.getElementById("containerOjos");
    let i = false;

    function vsisible() {
        if(i) {
            button.innerText = "Mas Matices";
            container.classList.remove("grid");
            container.classList.add("hidden");
        } else {
            container.classList.add("grid");
            container.classList.remove("hidden");
            button.innerText = "Cerrar";
        }
        i = !i;
    }

    button.addEventListener("click", function () { vsisible() });
</script>